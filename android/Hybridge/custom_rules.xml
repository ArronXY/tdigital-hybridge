<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>
<project name="custom" default="release" basedir=".">
    <echo level="info">Start custom_rules.xml...</echo>
    <property name="2x-lib-path" value="../../../mca-mobile-android-2x/EnjoyLib"/>
    <target name="-2x-release" if="build.is.mode.release">
        <ant antfile="${2x-lib-path}/build.xml" target="release" inheritAll="false"/>
    </target>
    <target name="-2x-debug" unless="build.is.mode.release">
        <ant antfile="${2x-lib-path}/build.xml" target="debug" inheritAll="false"/>
    </target>
    <target name="-pre-build" depends="-2x-release,-2x-debug">
        <jar
            destfile="libs/enjoylib.jar"
            basedir="${2x-lib-path}/bin/classes"
            excludes="com/pdi/enjoy/lib/ui/*/*.class,com/pdi/enjoy/lib/ui/*/*/*.class,
            com/pdi/enjoy/lib/utils/ui/*/*.class,com/pdi/enjoy/lib/utils/ui/*.class,
            com/pdi/enjoy/lib/utils/ui/*/*/*.class,com/pdi/enjoy/lib/utils/drm/*.class"
        />
    </target>
    <target name="-pre-clean">
            <delete dir="${2x-lib-path}/bin/classes" verbose="${verbose}" />
            <delete file="libs/enjoylib.jar" verbose="${verbose}"/>
    </target>
</project>
